{
    "name": "r-vscode-tools",
    "displayName": "r-vscode-tools",
    "description": "An extension to perform R CMD check on packages",
    "version": "0.0.2",
    "publisher": "hkumar6",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Languages"
    ],
    "homepage": "https://github.com/hkumar6/r-vscode-tools/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/hkumar6/r-vscode-tools.git"
    },
    "bugs": {
        "url": "https://github.com/hkumar6/r-vscode-tools/issues",
        "email": "moluharsha+vscode@gmail.com"
    },
    "activationEvents": [
        "workspaceContains:DESCRIPTION",
        "workspaceContains:NAMESPACE"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
            "command": "extension.checkRpackage",
            "title": "R: Check package"
        },
        {
            "command": "extension.installRpackage",
            "title": "R: Install package directory"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "shelljs": "^0.7",
        "@types/mocha": "^2.2.32"
    }
}